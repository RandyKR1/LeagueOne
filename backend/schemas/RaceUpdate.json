{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://our.league.com/raceUpdate.schema.json",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "minLength": 1,
      "maxLength": 100
    },
    "round": {
      "type": "integer",
      "minimum": 1
    },
    "date": {
      "type": "string",
      "format": "date-time"
    },
    "location": {
      "type": "string",
      "minLength": 1,
      "maxLength": 100
    },
    "status": {
      "type": "string",
      "enum": ["Scheduled", "Completed"]
    }
  },
  "additionalProperties": false
}
