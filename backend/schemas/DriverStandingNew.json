{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://our.league.com/driverStandingNew.schema.json",
  "type": "object",
  "properties": {
    "driverId": {
      "type": "integer",
      "minimum": 1,
      "description": "The ID of the driver"
    },
    "leagueId": {
      "type": "integer",
      "minimum": 1,
      "description": "The ID of the league"
    },
    "points": {
      "type": "integer",
      "minimum": 0,
      "default": 0
    },
    "position": {
      "type": "integer",
      "minimum": 1
    },
    "wins": {
      "type": "integer",
      "minimum": 0,
      "default": 0
    },
    "podiums": {
      "type": "integer",
      "minimum": 0,
      "default": 0
    },
    "racesCompleted": {
      "type": "integer",
      "minimum": 0,
      "default": 0
    }
  },
  "additionalProperties": false,
  "required": ["driverId", "leagueId"]
}
