{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://our.league.com/driverNew.schema.json",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "minLength": 1,
      "maxLength": 50
    },
    "teamId": {
      "type": "integer",
      "minimum": 1,
      "description": "The ID of the team this driver belongs to. Optional if AI."
    },
    "leagueId": {
      "type": "integer",
      "minimum": 1,
      "description": "The ID of the league this driver belongs to."
    },
    "userId": {
      "type": "integer",
      "minimum": 1,
      "description": "The ID of the user controlling the driver. Optional for AI."
    },
    "isAI": {
      "type": "boolean",
      "default": false
    }
  },
  "additionalProperties": false,
  "required": ["name", "leagueId"]
}
