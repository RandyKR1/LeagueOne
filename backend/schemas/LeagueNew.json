{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://our.league.com/leagueNew.schema.json",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "minLength": 1,
      "maxLength": 50
    },
    "password": {
      "type": "string",
      "minLength": 1
    },
    "maxTeams": {
      "type": "integer",
      "minimum": 1
    },
    "competition": {
      "type": "string",
      "enum": [
        "Soccer",
        "Football",
        "Hockey",
        "Basketball",
        "Tennis",
        "Golf",
        "Baseball",
        "Motorsport",
        "Other"
      ]
    },
    "description": {
      "type": "string",
      "minLength": 0
    },
    "firstPlacePoints": {
      "type": "integer",
      "minimum": 1
    },
    "secondPlacePoints": {
      "type": "integer"
    },
    "drawPoints": {
      "type": "integer"
    },
    "leagueType": {
      "type": "string",
      "enum": [
        "TEAM_BASED",
        "RACE_BASED"
      ]
    },
    "maxDriversPerTeam": {
      "type": "integer",
      "default": 2
    },
    "scoringSystem": {
      "type": "object",
      "patternProperties": {
        "^[0-9]+$": {
          "type": "integer"
        }
      },
      "additionalProperties": false,
      "description": "Maps finishing position to points (e.g., { '1': 25, '2': 18 })"
    }
  },
  "additionalProperties": false,
  "required": [
    "name",
    "firstPlacePoints",
    "competition",
    "leagueType"
  ]
}